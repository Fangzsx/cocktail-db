<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.CocktailActivity"
    android:background="?colorOnSecondary">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/cl_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:expandedTitleTextColor="@color/white"
            app:collapsedTitleTextColor="@color/white"
            app:expandedTitleTextAppearance="@style/MyExpandedTitle"
            app:collapsedTitleTextAppearance="@style/MyCollapsedTitle">
            <ImageView
                android:id="@+id/iv_cocktail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseMode="parallax"
                android:scaleType="centerCrop"/>
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:layout_collapseMode="pin"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/cl_toolbar"
        app:layout_anchorGravity="bottom|end"
        android:layout_marginEnd="@dimen/_10sdp"
        app:tint="#FF0000"
        android:src="@drawable/favorite"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp">
        <TextView
            android:id="@+id/tv_ingredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="INGREDIENTS"
            android:textStyle="bold"
            android:fontFamily="@font/oneplussans"
            android:textSize="@dimen/_12ssp"
            android:textColor="?colorOnPrimary" />

            <LinearLayout
                android:id="@+id/ll_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="@id/tv_ingredient"
                app:layout_constraintTop_toBottomOf="@id/tv_ingredient"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_tags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TAGS"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/oneplussans"
                    android:textColor="?colorOnPrimary"/>

                <TextView
                    android:id="@+id/tv_alcoholic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd  ="@dimen/_6sdp"
                    android:fontFamily="@font/oneplussans"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="italic"
                    android:background="@drawable/tag_bg"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd  ="@dimen/_6sdp"
                    android:textStyle="italic"
                    android:fontFamily="@font/oneplussans"
                    android:textSize="@dimen/_12ssp"
                    android:background="@drawable/tag_bg"
                    android:backgroundTint="#673AB7"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_cocktail_ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/ll_tags"
                app:layout_constraintStart_toStartOf="@id/ll_tags"/>

            <TextView
                android:id="@+id/tv_procedure_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/rv_cocktail_ingredients"
                app:layout_constraintStart_toStartOf="@id/rv_cocktail_ingredients"
                android:text="PROCEDURE"
                android:fontFamily="@font/oneplussans"
                android:textStyle="bold"
                android:textColor="?colorOnPrimary"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/tv_procedure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/oneplussans"
                android:textSize="@dimen/_10sdp"
                android:textColor="?colorOnPrimary"
                app:layout_constraintTop_toBottomOf="@id/tv_procedure_label"
                app:layout_constraintStart_toStartOf="@id/tv_procedure_label"
                android:layout_marginTop="@dimen/_10sdp"/>

            <com.bitvale.lightprogress.LightProgress
                android:id="@+id/loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="?colorSecondary"
                app:light_color="@color/yellow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>